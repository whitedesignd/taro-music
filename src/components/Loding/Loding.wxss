.loding{
    position: absolute;
    left: 50%;
    top: 32%;
    transform: translate(-50%,-50%);
}
.item{
    display: inline-block;
    width: 5rpx;
    height: 18rpx;
    margin: 0 5rpx;
    border-radius: 4rpx;
    background-color:red;
    animation: load 1s ease infinite;
}
.title{
    display: inline-block;
    font-size:30rpx;
    padding: 0 10rpx ;
}
@keyframes load{
    0%,100%{
        height: 20rpx;
    }
    50%{
        height: 40rpx; 
    }
}
.item:nth-child(2){
    animation-delay:0.2s;
}
.item:nth-child(3){
    animation-delay:0s;
}
.item:nth-child(4){
    animation-delay:0.2s;
}
 .item:nth-child(5){
    animation-delay:0s;
}